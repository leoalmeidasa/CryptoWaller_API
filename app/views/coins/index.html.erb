<p id="notice"><%= notice %></p>

<h1><%= @coins.model_name.human(count: 2)%></h1>

<div class="table-responsive">
<table class="table table-hover table-striped">
  <thead>
    <tr class="table-primary">
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th><%= @coins.human_attribute_name(:mining_type)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr class="table-info">
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= coin.mining_type.description%></td>
        <td><%= link_to t('links.show'), coin, class: "btn btn-outline-info" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class: "btn btn-outline-warning" %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, class: "btn btn-outline-danger", data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to t('links.new'), new_coin_path, class: "btn btn-outline-success" %>

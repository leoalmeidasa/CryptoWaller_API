<p id="notice"><%= notice %></p>

<h1><%= @mining_types.model_name.human(count: 2)%></h1>

<table class="table table-hover table-striped">
  <thead>
    <tr class="table-primary">
      <th><%= @mining_types.human_attribute_name(:description)%></th>
      <th><%= @mining_types.human_attribute_name(:acronym)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr class="table-info">
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class: "btn btn-outline-info" %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class: "btn btn-outline-warning" %></td>
        <td><%= link_to t('links.destroy'), mining_type, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new_type'), new_mining_type_path, class: "btn btn-outline-success" %>
